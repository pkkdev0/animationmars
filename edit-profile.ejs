    <title>Edit Profile</title>
  </head>
  <body>

    <section class="wrapper">
      <div class="form signup">
        <header>Edit Profile</header>
        <form action="/edit-profile/<%= user.userId %>" method="POST">
          <input type="text" name="username" value="username : <%= user.username %>" required disabled style="background: #ff000075;color: #fff;font-weight: bold;border: 1px solid red;">
          <input type="text" name="displayname" value="<%= user.displayname %>" placeholder="displayname" required>
          <input type="text" name="bio" value="<%= user.bio %>" placeholder="bio" required>
          <input type="number" name="age" value="<%= user.age %>" required required min="18">
          <input type="text" name="backgrund" value="<%= user.backgrund %>" placeholder="backgrund">
          <input type="text" name="profileimg" value="<%= user.profileimg %>" placeholder="profile image">
          <input type="text" name="password" value="<%= user.password %>" placeholder="password" required>
          <div class="checkbox">
            <input type="checkbox" id="signupCheck" />
            <label for="signupCheck">Reassurance is all perfect</label>
          </div>
          <input type="submit" value="Update Profile" />
        
      </div>
      <div class="form login" style="overflow: auto;">
        <header>social media</header>
        <form class="social-status">
    <label for="facebookProfile">facebookProfile URL:</label>
    <input type="text" name="facebookProfile" value="<%= user.facebookProfile %>">
    <label for="tiktokProfile">tiktokProfile URL:</label>
    <input type="text" name="tiktokProfile" value="<%= user.tiktokProfile %>">
    <label for="telegramProfile">telegramProfile URL:</label>
    <input type="text" name="telegramProfile" value="<%= user.telegramProfile %>">
    <label for="instagramProfile">instagramProfile URL:</label>
    <input type="text" name="instagramProfile" value="<%= user.instagramProfile %>">
        </form>

      </div>
    </form>

      <script>
        const wrapper = document.querySelector(".wrapper"),
          signupHeader = document.querySelector(".signup header"),
          loginHeader = document.querySelector(".login header");

        loginHeader.addEventListener("click", () => {
          wrapper.classList.add("active");
        });
        signupHeader.addEventListener("click", () => {
          wrapper.classList.remove("active");
        });
      </script>
    </section>
  </body>
